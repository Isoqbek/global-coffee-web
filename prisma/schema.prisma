
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model FranchiseLead {
  id          String   @id @default(cuid())
  name        String
  phone       String
  email       String   @unique
  city        String
  message     String? // Qo'shimcha xabar uchun, ixtiyoriy
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SupplierLead {
  id             String    @id @default(cuid())
  companyName    String
  contactPerson  String
  phone          String
  email          String
  message        String
  fileUrl        String? // Fayl manzili uchun
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model LandlordLead {
  id          String    @id @default(cuid())
  name        String
  phone       String
  address     String // Taklif qilinayotgan bino/joy manzili
  city        String
  area        Float // Maydoni (mÂ²)
  message     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model ManagementContact {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}